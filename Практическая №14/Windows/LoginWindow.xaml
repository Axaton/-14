<Window x:Class="Практическая__14.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая__14"
        mc:Ignorable="d"
        Title="LoginWindow" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <PasswordBox x:Name="password" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="100"/>

        <Grid Grid.Row="1" Grid.Column="0">
            <Button Content="Вход" Height="20" Click="login_Click"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Button Content="Выход" Height="20" Click="Exit_Click"/>
        </Grid>
    </Grid>
</Window>
